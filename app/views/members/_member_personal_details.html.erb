<div class="card mb-5" id="member-personal-details">
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag "dmu1.png", class: 'img-fluid', width: '200px' %>
    </div>
    <div class="col-lg-8">
      <div class="card-body">
        <h3 class="fw-bold"><%= user.full_name %> </h3>
        <p class="lead"><%= user.profile_title %></p>
        <p class="lead text-primary"><%= user.address %></p>
        <% if user_signed_in? && user.id == current_user.id %>
          <div class="col-lg-6">
            <div class="d-flex justify-content-end">
              <%= link_to edit_member_personal_details_path(current_user), data: { controller: "bs-modal-form" } do%>
                <i class="bi bi-pen"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
